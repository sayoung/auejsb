<div id="service_id" class="full-container">
    					<div id="" class="col-lg-12 col-md-12 col-sm-12 col-12 padding-3">
					<h2 class="e-title"> {% trans %}E-services{% endtrans %}</h2></div>
<div class="options">
    {% set i = 0 %}
    {% for node in sliders %}
    {% set fid = node.bg_service  %}
   <div class="option {% if i == 0 %}active {% endif %}" style="--optionBackground:url( {{ file_url(get_url_by_fid(fid)) }});">
      <div class="shadow"></div>
      <div class="label">
         <div class="icon">
            <i class="{{ node.service_icon_service }}"></i>
         </div>
         <div class="info">
            <div class="main">{{ node.service_title|t }}</div>
            <div class="sub">{{ node.description|t }}</div>
                 
         </div>
         <div class="btn-services">   
                 {% if node.service_link_title_1 %}<a href="{{ node.service_link_1|t }}" ><span>{{ node.service_link_title_1|t }}</span></a>{%  endif %}
                 {% if node.service_link_title_2 %}<a href="{{ node.service_link_2|t }}" ><span>{{ node.service_link_title_2|t }}</span></a>{%  endif %}
                 {% if node.service_link_title_3 %}<a href="{{ node.service_link_3|t }}" ><span>{{ node.service_link_title_3|t }}</span></a>{%  endif %} 
                 
                 </div>
      </div>
   </div>
   {% set i = i + 1 %}
   {% endfor %}
</div>
</div>